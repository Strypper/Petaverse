                                                    <FontIcon Glyph="&#xE8B9;"/>
                                                </AppBarButton.Icon>
                                            </AppBarButton>
                                            <AppBarButton x:Name="FullWindowButton" MediaTransportControlsHelper.DropoutOrder="17" Style="{StaticResource AppBarButtonStyle}">
                                                <AppBarButton.Icon>
                                                    <SymbolIcon x:Name="FullWindowSymbol" Symbol="FullScreen"/>
                                                </AppBarButton.Icon>
                                            </AppBarButton>
                                        </CommandBar>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <media:AttachedCardShadow x:Key="PetGalleryPivotShadow" Offset="-4,-4,0"/>
        <converters:StringToMediaSourceConverter x:Key="StringToMediaSourceConverter"/>
    </UserControl.Resources>
    <Grid Margin="0,20,20,20"
          ui:Effects.Shadow="{StaticResource PetGalleryPivotShadow}">
        <Border CornerRadius="10">
            <MediaPlayerElement Source="{x:Bind PetShort.MediaUrl
                                               ,Mode=OneWay
                                               ,Converter={StaticResource StringToMediaSourceConverter}}"
                                            Stretch="UniformToFill"
                                            AutoPlay="True"
                                            AreTransportControlsEnabled="True">
                <MediaPlayerElement.TransportControls>
                    <MediaTransportControls IsCompact="False" 
                                            IsFullWindowEnabled="True" 
                                            IsVolumeEnabled="True"
                                            Style="{StaticResource PetaverseMediaPlayerStyle}"  />
                </MediaPlayerElement.TransportControls>
            </MediaPlayerElement>
        </Border>
        <StackPanel Orientation="Horizontal"
                                CornerRadius="10"
                                Padding="20"
                                Margin="20"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}">
            <StackPanel>
                <TextBlock Text="94"
                               HorizontalAlignment="Center"
                               Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Posts"
                               HorizontalAlignment="Center"
                               Style="{StaticResource BaseTextBlockStyle}"/>
            </StackPanel>
            <NavigationViewItemSeparator/>
            <StackPanel>
                <TextBlock Text="2.5M"
                               HorizontalAlignment="Center"
                               Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Followers"
                               HorizontalAlignment="Center"
                               Style="{StaticResource BaseTextBlockStyle}"/>
            </StackPanel>
            <NavigationViewItemSeparator/>
            <StackPanel>
                <TextBlock Text="{x:Bind PetShort.Love, Mode=OneWay}"
                           HorizontalAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Loves"
                               HorizontalAlignment="Center"
                               Style="{StaticResource BaseTextBlockStyle}"/>
            </StackPanel>
        </StackPanel>
        <PersonPicture Width="80"
                       Margin="20"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       ToolTipService.ToolTip="{x:Bind PetShort.Publisher.FullName, Mode=OneWay}"
                       ProfilePicture="{x:Bind PetShort.Publisher.ProfilePicUrl, Mode=OneWay}"/>
    </Grid>
</UserControl>
