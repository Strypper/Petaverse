                Stretch="UniformToFill">
                <MediaPlayerElement.TransportControls>
                    <helpers:PetShortMediaPlayer
                        Title="{x:Bind PetShort.Title, Mode=OneWay}"
                        IsCompact="False"
                        IsFullWindowEnabled="True"
                        IsLoved="{x:Bind PetShort.IsLoved, Mode=TwoWay}"
                        IsVolumeEnabled="True"
                        ToggleLoveEvent="PetShortMediaPlayer_ToggleLoveEvent" />
                </MediaPlayerElement.TransportControls>

            </MediaPlayerElement>
        </Border>
