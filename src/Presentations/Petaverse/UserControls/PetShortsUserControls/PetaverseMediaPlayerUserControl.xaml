            Margin="20"
            Padding="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            CornerRadius="10"
            Orientation="Horizontal">
