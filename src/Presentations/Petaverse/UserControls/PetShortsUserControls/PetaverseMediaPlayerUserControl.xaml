            Width="80"
            Margin="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            ProfilePicture="{x:Bind PetShort.Publisher.PetaverseProfileImageUrl, Mode=OneWay, FallbackValue='ms-appx:///Assets/Logos/Petaverse.png', TargetNullValue='ms-appx:///Assets/Logos/Petaverse.png', Converter={StaticResource StringToImageSourceConverter}}"
