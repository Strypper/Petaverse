                <TextBlock
                    HorizontalAlignment="Center"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="2.5M" />
                <TextBlock
                    HorizontalAlignment="Center"
                    Style="{StaticResource BaseTextBlockStyle}"
                    Text="Followers" />
            </StackPanel>
            <NavigationViewItemSeparator />
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="{x:Bind PetShort.Love, Mode=OneWay}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    Style="{StaticResource BaseTextBlockStyle}"
                    Text="Loves" />
            </StackPanel>
        </StackPanel>
