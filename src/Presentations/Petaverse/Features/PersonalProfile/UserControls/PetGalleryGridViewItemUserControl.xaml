<UserControl
    x:Class="Petaverse.PersonalProfile.PetGalleryGridViewItemUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Petaverse.PersonalProfile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <MenuFlyout x:Key="PetGalleryGridViewItemUserControlFlyout">
            <MenuFlyout.Items>
                <MenuFlyoutItem
                    Background="Red"
                    Icon="Delete"
                    Text="Delete Image" />
            </MenuFlyout.Items>
        </MenuFlyout>
    </UserControl.Resources>

    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        ContextFlyout="{StaticResource PetGalleryGridViewItemUserControlFlyout}">
        <Image
            x:Name="PetMedia"
            MinHeight="300"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Source="{x:Bind PetaverseMedia.MediaUrl, Mode=OneWay, FallbackValue='ms-appx:///Assets/Logos/Petaverse.png', TargetNullValue='ms-appx:///Assets/Logos/Petaverse.png', Converter={StaticResource StringToImageSourceConverter}}"
            Stretch="UniformToFill" />
    </Grid>
</UserControl>
